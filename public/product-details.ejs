    <script>
        document.querySelector(".contact-form-items").addEventListener("submit", async function(e) {
            e.preventDefault();
    
            let formData = {
                name: document.querySelector('input[placeholder="Full Name"]').value,
                phone: document.querySelector('input[placeholder="Phone"]').value,
                email: document.querySelector('input[placeholder="Email"]').value,
                message: document.querySelector('textarea[placeholder="Message"]').value
            };
    
            try {
                let response = await fetch("/api/send-mail", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(formData)
                });
    
                let result = await response.json();
    
                if (response.ok) {
                    Swal.fire({
                        icon: "success",
                        title: "Success!",
                        text: result.success,
                        confirmButtonColor: "#3085d6"
                    });
    
                    // Reset form fields
                    document.querySelector(".contact-form-items").reset();
                } else {
                    Swal.fire({
                        icon: "error",
                        title: "Oops...",
                        text: result.error,
                        confirmButtonColor: "#d33"
                    });
                }
            } catch (error) {
                console.error("Error sending email:", error);
                Swal.fire({
                    icon: "error",
                    title: "Error!",
                    text: "Something went wrong. Please try again later.",
                    confirmButtonColor: "#d33"
                });
            }
        });
    </script>
    



